RewriteEngine On

# Обработка /menu без .php
RewriteRule ^menu$ menu.php [L]

# Обработка других PHP файлов без расширения (опционально)
RewriteRule ^([^/]+)$ $1.php [L]

# Безопасность - запрет доступа к .htaccess
<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>

# Безопасность - запрет доступа к конфигурационным файлам
<FilesMatch "\.(env|config|log)$">
    Order allow,deny
    Deny from all
</FilesMatch>
